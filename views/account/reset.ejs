<%- include('../partials/header') %>

<div class="col-sm-8 col-sm-offset-2">
    <form method="POST">
        <legend>Reset Password</legend>
        <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>
        <div class="form-group">
            <label for="password" class="control-label">New Password</label>
            <input type="password" name="password" id="password" placeholder="New Password" autofocus required class="form-control"></input>
        </div>
        <div class="form-group">
            <label for="confirm" class="control-label">Confirm Password</label>
            <input type="password" name="confirm" id="confirm" placeholder="Confirm Password" required class="form-control"></input>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-reset">
                <i class="fa fa-keyboard-o"></i>
                Change Password
            </button>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>